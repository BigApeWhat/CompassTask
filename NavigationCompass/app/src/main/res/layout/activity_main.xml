<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/White"
    tools:context="com.bigapewhat.navigationcompass.CompassController.MainActivity">

    <ImageView
        android:id="@+id/compassImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_compass"/>

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/textTemp"
        android:text="GPS Info"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/latBtn"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:padding="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latitudeTxt"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/lonBtn"
            android:layout_alignParentRight="true"
            android:padding="22dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longitudeTxt"
            android:textSize="16sp"/>
    </RelativeLayout >

</RelativeLayout>
